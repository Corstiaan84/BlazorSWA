@if (isOpen)
{
  <div class="modal @((isOpen) ? "is-active" : "")">
  <div class="modal-background" @onclick="HideModal"></div>
  <div class="modal-content">
    <div class="card modal-content-inner">
      <a class="flex is-pulled-right" @onclick="HideModal">
        <img src="/images/close.png" />
      </a>
      <div class="card-content">
        @ModalWindowContent
      </div>
    </div>
  </div>
</div>
}

@code {
  [Parameter]
  public RenderFragment? ModalWindowContent { get; set; }

  public bool isOpen { get; set; }

  public void ShowModal()
  {
    isOpen = true;
    StateHasChanged();
  }

  public void HideModal()
  {
    isOpen = false;
    StateHasChanged();
  }
}